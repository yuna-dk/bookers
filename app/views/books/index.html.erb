<h1>Books</h1>

<% @books.each do |book| %>
  <p>Title</p>
  <span><%= book.title %></span>

  <p>Body</p>
  <span><%= book.body %></span>
  
  <span>
    <%= link_to "Show", book_path(book.id) %>
    <%= link_to "Edit", edit_book_path(book.id) %>
    <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
  </span>
<% end %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <table>
    <h5>Title</h5>
    <%= f.text_field :title %>

    <h5>Body</h5>
    <%= f.text_area :body %>
    
    <%= f.submit 'Create Book' %>
  </table>
<% end %>