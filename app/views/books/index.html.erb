<h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
      </tr>
    </tbody>
    <% end %>
    </table>
    
<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <div class="box">
      <h5>Title</h5>
      <%= f.text_field :title %>

      <h5>Body</h5>
      <%= f.text_area :body %>
      <br>
      <%= f.submit 'Create Book' %>
    
  </div>
<% end %>